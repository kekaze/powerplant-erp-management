<body>
    <div id="login-container">
        <% if flash[:notice] %>
            <% flash[:notice].each do |note| %>
                <p id="notice"><%= note %></p>  
            <% end %>
        <% end %>
        <% if flash[:user_errors] %>
            <div id="error_explanation">
                <h2><%= pluralize(flash[:user_errors].count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                    <% flash[:user_errors].each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
        <%= form_with url: default_attempt_login_path do |form| %>
            <p id="note">This is a shortcut process for login so you don't have to enter any credentials</p>
            <h2 id="greeting"></h2>
            <div>
                <h3>Login as:</h3>
                <%= form.select :role, ["Admin", "Requestor", "Reviewer", "Approver", "Specialist", "Custodian", "Finance"] %>
            </div>
            <%= form.hidden_field :username, value: "default_admin_name" %>
            <%= form.submit 'Login' %>
            <%= link_to "Want to experience the actual login process? Click here." %>
        <% end %>
        <script>
            let name = prompt("Please enter a name", "BINI_Colet")
            if (name != null) {
                let element = document.getElementById("username")
                let greet = document.getElementById("greeting")
                element.setAttribute("value", name)
                greet.innerHTML = "Hi, " + name + " ðŸ‘‹"
            }
        </script>
    </div>
</body>