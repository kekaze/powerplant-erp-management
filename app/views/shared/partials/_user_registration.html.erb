
<div class="modal fade" id="user-registration-modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content w-75">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/users/create" method="post" class="bg-light p-3 rounded">
        <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
        <select class="form-select mb-3" name="user[role_id]" id="role_id" class="">
            <option value="1">Requestor Account</option>
            <option value="2">Reviewer Account</option>
            <option value="3">Approver Account</option>
            <option value="4">Specialist Account</option>
            <option value="5">Custodian Account</option>
            <option value="6">Finance Account</option>
            <option value="9">Administrator Account</option>
        </select>
        <div class="form-floating mb-3">
          <input type="email" name="user[email]" class="form-control" id="email" placeholder="Email">
          <label for="email">Email address</label>
        </div>
        <div class="form-floating mb-3">
          <input type="text" name="user[last_name]" class="form-control" id="last_name" placeholder="Last Name">
          <label for="last_name">Last Name</label>
        </div>
        <div class="form-floating mb-3">
          <input type="text" name="user[first_name]" class="form-control" id="first_name" placeholder="First Name">
          <label for="first_name">First Name</label>
        </div>
        <div class="form-floating mb-3">
          <input type="password" name="user[password]" class="form-control" id="password" placeholder="Password">
          <label for="email">Password</label>
        </div>
        <div class="form-floating mb-3">
          <input type="password" name="user[confirm_password]" class="form-control" id="confirm_password" placeholder="Confirm Password">
          <label for="email">Confirm Password</label>
        </div>
        <button type="button" class="btn btn-primary w-100">Register</button>
      </form>
    </div>
  </div>
</div>

